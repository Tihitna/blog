<!DOCTYPE html>
<html lang="en">
    <%- include('./partitions/header.ejs') %>
<body>
    <%- include('./partitions/navbar.ejs') %>

    <div class="content">
        <div class="blogs">
            <div class="blog-top">
                <h2>Blogs</h2>
                <div class="input">
                    <input type="search" placeholder="search">
                    <img src="/images/search.png" alt="">
                </div>
            </div>
            <div class="row">
                <% for(let i = 0; i < news.articles.length; i++){ %>
                 <div class="col">
                    <% const url = "/blog_details/"+i %>
                    <% console.log(url) %>
                    <a href=<%= url %> >
                        <div class="card">
                            <img src= <%= news.articles[i].urlToImage %>  alt="">
                            <div class="card-body">
                             <% const word = news.articles[i].description.split(" ").slice(0, 10).join(" "); %>
                             <% const title = news.articles[i].title.split(" ").slice(0, 4).join(" "); %>
                             <h4><%= title %></h4>
                             <p><%= word+' ...' %></p>
                             <div class="bottom">
                                 <div class="reaction">
                                     <img src="/images/heart.png" class="reaction--img" alt="">
                                      676324
                                 </div>
                                 <img src="/images/arrow.png" alt="">
                             </div>
                            </div>
                         </div>
                    </a>
                </div>
                   <% }%>
                
                </div>
            </div>
            
        </div>
    </div>

    <%- include('./partitions/footer.ejs') %>    

</body>
</html>